{% include "header.njk" %}
<main role="content" aria-label="main content" id="main-content">
  <section class="banner" aria-label="banner">
    <div class="container">
      <div class="banner__wrap">
        <div class="banner__start">
          <h1 class="heading-primary"><span>Guilt-free</span> <span> meat</span> for those <span>who care</span></h1>
          <button class="btn btn--primary">ABOUT US</button>
        </div>
        <div class="banner__end slider">
          <ul class="slider__list one-item-main">
            <li class="slider__item">
                {% image "src/images/slider-1.png", "b-slider", "slider-1", "(min-width: 30em) 50vw, 100vw" %}
            </li>
            <li class="slider__item">
              {% image "src/images/slider-2.png", "b-slider", "slider-2", "(min-width: 30em) 50vw, 100vw" %}
            </li>
            <li class="slider__item">
              {% image "src/images/slider-3.png", "b-slider", "slider-3", "(min-width: 30em) 50vw, 100vw" %}
            </li>
            <li class="slider__item">
              {% image "src/images/slider-4.png", "b-slider", "slider-4", "(min-width: 30em) 50vw, 100vw" %}
            </li>
          </ul>
            {% image "src/images/certificate.svg", "slider__certficate-img", "100% plant based" %}
          <div class="slider__numbers">
            <span class="slider__num">01</span><span class="slider__total-num">05</span>
          </div>
        </div>
      </div>
      <div class="link-wrap">
        <a class="arrow-down" href="#promise" role="link" aria-label="go to promise">{% image "src/images/icon-arrow.svg", "", "Down arrow" %}</a>
      </div>
    </div>
  </section>

  <article id="promise" class="promise">
    <section class="the-promise">
      <div class="container">
        <div class="the-promise__title">
          {% image "src/images/icon-promise.png", "", "Handshake", "(min-width: 30em) 50vw, 100vw" %}
